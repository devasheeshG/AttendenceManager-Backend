[Unit]
Description=SRM Student Portal Attendance Manager API
After=network.target

[Service]
User=sharmayank
Group=sharmayank
WorkingDirectory=/Users/sharmayank/Documents/AttendenceManager-Backend
Environment="PATH=/Users/sharmayank/Documents/AttendenceManager-Backend.venv/bin"
# EnvironmentFile=/Users/sharmayank/Documents/AttendenceManager-Backend.env
ExecStart=/Users/sharmayank/Documents/AttendenceManager-Backend.venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 127.0.0.1:8000 --log-level=debug
TimeoutStartSec=120
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target